<!DOCTYPE html>

<!-- Javascript -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
	function add_img(img_url) {
		new_img = new Image();
        new_img.classList.add("nft-img");
        new_img.src = img_url;
        document.getElementById("photo-list").appendChild(new_img);
	}

    $(document).ready(function() {
        let i = 0;
        $("button").click(function() {
            const imageDirectory = "";
            // const images = ["alligator.png", "bat.png", "cat.png", "dog.png"];
            const images = ["https://ipfs.io/ipfs/QmXiDcEu27TeBo2seYDuy81xtKmeYk3QUtjinNEnhpgReU",
					        "https://ipfs.io/ipfs/QmXiDcEu27TeBo2seYDuy81xtKmeYk3QUtjinNEnhpgReU",
					        "https://ipfs.io/ipfs/QmXiDcEu27TeBo2seYDuy81xtKmeYk3QUtjinNEnhpgReU",
					        "https://ipfs.io/ipfs/QmXiDcEu27TeBo2seYDuy81xtKmeYk3QUtjinNEnhpgReU"]

            for (let img_url of images) {
                let img = new Image();
                img.classList.add("nft-img");
                idString = i.toString();
                img.setAttribute("id", idString);
                img.addEventListener("click", e => add_img(img_url));
                i += 1;
                img.src = img_url;
                document.getElementById("image-container").appendChild(img);
            }
        });
    });
</script>

<!-- CSS -->
<style>
:root {
    --selector-width: 30%;
    --buffer-width: 5px;
    --width: 1248px;
    --height: 1690px;
    --scaling-factor: 0.1;
}

html, body {
    margin: 0;
    padding: 0;
    max-height: 100vh;
    background-color: #eeeeee;
}

h1 {
    color: white;
    font-family: Helvetica;
    font-size: 26px;
}

.button {
  background-color: #4CAF50; /* green */
  border: none;
  border-radius: 4px;
  color: white;
  padding: 12px 25px;
  text-align: center;
  display: inline-block;
  font-size: 16px;
}

.nft-img {
	height: calc(var(--height) * var(--scaling-factor));
	width: calc(var(--width) * var(--scaling-factor));
    margin: 10px;
    border-radius: 5px;
    transition: .95s ease;
}

img:hover {
    opacity: 0.6;
}

::-webkit-scrollbar {
  width: 10px;
}

::-webkit-scrollbar-track {
    background: black;
    border-radius: 10px;
}
 
::-webkit-scrollbar-thumb {
    background: white;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background: #dddddd; 
}

#selector {
    position: fixed;
    float: left;
    overflow-y: auto;

    height: 100%;
    width: var(--selector-width);
    
    background: black;
}

#scrollbar-buffer {
    position: fixed;
    left: var(--selector-width);
    width: var(--buffer-width);
    height: 100%;
    background-color: black;
}

#gallery-container {
    position: fixed;
    left: calc(var(--selector-width) + var(--buffer-width));
    width: calc(100% - var(--selector-width) - var(--buffer-width));
    height: 100%;
    display: table;
}

#gallery {
    display: table-cell;
    vertical-align: middle;
}

</style>

<!-- HTML -->
<body>
<div>
<div id="selector">

<center>
<br>
<h1 id="header">Account: <%= name %></h1>
<br>
<button class="button">
    Load More
</button>

<br>
<br>
<br>

<div id="image-container">
	<% for (let i = 0; i < searchRes.nftList.length; i++) { %>
		<img class="nft-img" id="<%= i %>" src="<%= searchRes.nftList[i].img_url %>" onclick="add_img('<%= searchRes.nftList[i].img_url %>')">
	<% } %>
</div>
</center>

</div>

<div id="scrollbar-buffer">
</div>

<div id="gallery-container">
    <center id="gallery">
    <div id="photo-list"></div>
    </center>
</div>
</body>
